{% extends "base.html.twig" %}

{% block title %}{{ title }}{% endblock %}
{% block header %}{{ title }}{% endblock %}

{% block body %}
    {% if notEnoughCards %}
        <h4>Not enough cards in deck</h4>
    {% else %}
        {% for hand in playerCards %}
            <h3>Player {{ loop.index }}</h3>
            {% for card in hand %}
                <img src="{{ asset('img/cards/' ~ card) }}" class="card">
            {% endfor %}
        {% endfor %}
    {% endif %}
    {% if cardsInDeck is defined %}
        <br><br>
        <h4>There are {{ cardsInDeck }} cards left in the deck</h4>
    {% endif %}
{% endblock %}
